<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlbumsActivity">

    <SearchView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"></SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom"
        android:layout_below="@id/top">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_songs"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/btn_song"
            android:text="Songs"
            android:textColor="#999999" />

        <Button
            android:id="@+id/btn_albums"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/btn_album_choose"
            android:text="Albums"
            android:textColor="#990066" />

        <Button
            android:id="@+id/btn_artists"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/btn_artist"
            android:text="Artists"
            android:textColor="#999999" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/btn_settings"
            android:text="Settings"
            android:textColor="#999999" />

    </LinearLayout>
</RelativeLayout>